<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_details_container"
    android:background="@color/straw_light"
    android:elevation="3dp"
    android:layout_marginVertical="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/product_details_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white_blur"
        android:padding="16dp"
        android:text="Thông tin chung"
        android:textColor="@color/violet_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/product_details_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Con biết bây giờ mẹ chờ tin con. Khi thấy mai đào nở vàng bên nương. Năm trước con hẹn đầu xuân sẽ về. Nay én bay đầy trước ngõ mà tin con vẫn xa ngàn xa.\n\nÔi nhớ xuân nào thuở trời yên vui. Nghe pháo giao thừa rộn ràng nơi nơi. Bao lứa trai cùng chào xuân chiến trường không lẽ riêng mình êm ấp. Mẹ ơi con xuân này vắng nhà.\n\nNếu con không về chắc mẹ buồn lắm. Mai tranh nghèo không người sửa sang. Khu vườn thiếu hoa vàng mừng xuân... Đàn trẻ thơ ngây chò mong anh trai, sẽ đem về cho tà áo mới, ba ngày xuân đi khoe sớm giềng..."
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_details_title" />
</androidx.constraintlayout.widget.ConstraintLayout>