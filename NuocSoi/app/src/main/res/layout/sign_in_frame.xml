<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInFrame">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/sign_in_background"/>


    <LinearLayout
        android:id="@+id/lnlContent"
        android:layout_width="@dimen/fwd_width"
        android:layout_height="wrap_content"
        android:background="@drawable/flt_window"
        android:elevation="@dimen/fwd_elevation"
        android:orientation="vertical"
        android:padding="@dimen/fwd_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/btnSignInEmail"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:text="Đăng nhập qua Email" />

        <Button
            android:id="@+id/btnSignInPhone"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_smartphone_24"
            android:text="Đăng nhập qua SĐT" />


        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray" />

        <Button
            android:id="@+id/btnSignUp"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_person_add_alt_1_24"
            android:text="Đăng ký tài khoản" />

        <TextView
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:textSize="10sp"
            android:text="Lưu ý: Chỉ dành cho khách hàng."/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>